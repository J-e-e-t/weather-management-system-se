<div class="container px-5 py-4">
    <form action="/previousData" method="post">

        <div class="row mb-3">
            <label for="from" class="col-sm-2 col-form-label">FROM :</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="from" name="from">
            </div>
        </div>

        <div class="row mb-3">
            <label for="to" class="col-sm-2 col-form-label">TO :</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="to" name="to">
            </div>
        </div>

        <div class="row">

            <div class="col align-self-center">
                <div class="container">
                    <button type="submit" class="btn btn-primary">Fetch</button>
                </div>
            </div>
        </div>
    </form>

</div>

<div class="container">
    {{#each data}}
    <h1> {{date}}</h1>
    <div class="container px-5 gy-5" style="padding-top: 40px">
        <table class="table table-striped table-dark ">
            <thead>
                <tr>
                    <th scope="col">Property</th>
                    <th scope="col">CC1</th>
                    <th scope="col">CC2</th>
                    <th scope="col">CC3</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Temperature</th>
                    <td>{{cc1_temp}}</td>
                    <td>{{cc2_temp}}</td>
                    <td>{{cc3_temp}}</td>
                </tr>
                <tr>
                    <th scope="row">Humidity</th>
                    <td>{{cc1_humidity}} %</td>
                    <td>{{cc2_humidity}} %</td>
                    <td>{{cc3_humidity}} %</td>
                </tr>
                <tr>
                    <th scope="row">feels Like</th>
                    <td>{{cc1_feels_like}}</td>
                    <td>{{cc2_feels_like}}</td>
                    <td>{{cc3_feels_like}}</td>
                </tr>
                <tr>
                    <th scope="row">Min Temp</th>
                    <td>{{cc1_min_temp}}</td>
                    <td>{{cc2_min_temp}}</td>
                    <td>{{cc3_min_temp}}</td>
                </tr>
                <tr>
                    <th scope="row">Max temp</th>
                    <td>{{cc1_max_temp}}</td>
                    <td>{{cc2_max_temp}}</td>
                    <td>{{cc3_max_temp}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    {{/each}}
</div>